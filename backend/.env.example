# 應用配置
APP_NAME="Proxy IP Pool Collector"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"

# 服務器配置
HOST="0.0.0.0"
PORT=8000
WORKERS=1
RELOAD=true

# 數據庫配置
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/proxy_collector"
REDIS_URL="redis://localhost:6379/0"

# 日誌配置
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# 爬取配置
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
RETRY_COUNT=3
RETRY_DELAY=1

# 代理驗證配置
VALIDATOR_TIMEOUT=10
VALIDATOR_TARGET_URLS="http://httpbin.org/ip,https://www.baidu.com"
VALIDATOR_CONCURRENT_WORKERS=20

# 速率限制
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# 監控配置
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=""

# 安全配置
SECRET_KEY="your-secret-key-here"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# 代理來源配置
PROXY_SOURCES_CONFIG_PATH="config/proxy_sources.json"