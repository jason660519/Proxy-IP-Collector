# 應用配置
APP_NAME="Proxy IP Pool Collector"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"

# 服務器配置
HOST="0.0.0.0"
PORT=8000
WORKERS=1
RELOAD=true

# 數據庫配置
# 新的統一數據庫配置系統
DATABASE_TYPE="postgresql"  # 可選值: sqlite, postgresql

# PostgreSQL配置 (當 DATABASE_TYPE="postgresql" 時使用)
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="proxy_collector"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="password"

# SQLite配置 (當 DATABASE_TYPE="sqlite" 時使用)
SQLITE_DB_PATH="./data/proxy_collector.db"

# Redis配置
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# 連接池配置
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis連接池配置
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=30

# 遺留配置 (向後兼容)
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/proxy_collector"
REDIS_URL="redis://localhost:6379/0"

# 日誌配置
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# 爬取配置
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
RETRY_COUNT=3
RETRY_DELAY=1

# 代理驗證配置
VALIDATOR_TIMEOUT=10
VALIDATOR_TARGET_URLS="http://httpbin.org/ip,https://www.baidu.com"
VALIDATOR_CONCURRENT_WORKERS=20

# 速率限制
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# 監控配置
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=""

# 安全配置
SECRET_KEY="your-secret-key-here"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# 代理來源配置
PROXY_SOURCES_CONFIG_PATH="config/proxy_sources.json"